    </div>
    
    <ul class="listing">
        <% for(let i=0;i<stock.length;i++){%>
        <li>
            <a class="name" href = "/invest/home/<%=stock[i].id%>"><%= stock[i].name %></a><br/>
            
        <% } %>
        </li>
    </ul>

</body>
